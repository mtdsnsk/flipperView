<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ボタンが選択されている時の定義 -->
    <item android:state_pressed="false"><shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
    <!--
            <corners android:topLeftRadius="30dp" android:topRightRadius="30dp" />
            -->
            <corners
                android:radius="35dp" />
        </shape></item>

    <!-- ボタンが選択されていない時の定義 -->
    <item android:state_selected="false"><shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:topLeftRadius="30dp" android:topRightRadius="30dp" />
            <corners
                android:radius="35dp" />
        </shape></item>

</selector>